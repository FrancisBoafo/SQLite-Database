{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "command": "dotnet",
        "type": "shell",
        "args": [
          "build",
          "${workspaceFolder}/OpenAI/Codex.cs",
          "--verbosity",
          "diag"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": {
          "owner": "dotnet",
          "pattern": {
            "regexp": "^([\\/0-9A-z\\._-]+\\.(cs|vb)(\\([0-9]+,[0-9]+\\))?):([0-9]+):([0-9]+):\\s+(error|warning)\\s+(.*)$",
            "file": 1,
            "line": 4,
            "column": 5,
            "severity": 6,
            "message": 7
          }
        }
      }
    ]
  }
  